{
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp/cache": true
  },
  // デフォルトオフ
  "css.validate": false,
  "scss.validate": false,

  "[css]": {
    "editor.formatOnSave": false
  },
  "[scss]": {
    "editor.formatOnSave": false
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true
  }
}
